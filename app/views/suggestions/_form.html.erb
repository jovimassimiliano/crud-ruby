<%= link_to "Back", suggestions_path %>
<% if @suggestion.errors.any? %>
  <h3>There are some errors:</h3>
  <% @suggestion.errors.full_messages.each do |msg|%>
    <ul>
      <li><%= msg %></li>
    </ul>
  <% end %>
<% end %>


<%= form_for @suggestion do|f|%>
  <p>
    <%= f.label :title%><br>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :description%><br>
    <%= f.text_area :description%>
  </p>

  <p>
    <%= f.submit%>
  </p>
<% end %>
