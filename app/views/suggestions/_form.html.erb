<%= render "shared/error",obj:@suggestion %>




<div class="row">
  <div class="col-sm-12">
    <%= form_for(@suggestion,:html => {class:"form-horizontal",role:"form"}) do|f|%>
      <div class="form-group">
        <div class="col-md-2">
            <%= f.label :title%>
        </div>

        <div class="col-md-8">
          <%= f.text_field :title, class:"form-control",placeholder:"Enter your title",autofocus:"true"%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-2">
          <%= f.label :description%>
        </div>

        <div class="col-md-8">
          <%= f.text_area :description, class:"form-control",rows:"10", placeholder:"Enter your description"%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
          <%= f.submit class:"btn btn-success"%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
          <%= link_to "Cancel", suggestions_path, class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
